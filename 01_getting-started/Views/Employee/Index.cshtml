@model IEnumerable<Employee>
@* @model List<Employee> *@

<div class="container mt-3">
    @* Header Page *@
    <h2>Employees List</h2>
    <a class="btn btn-primary" asp-action="Create">
        Create a new Employee
    </a>

    @* Table *@
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>FullName</th>
                <th>Email</th>
                <th>Age</th>
                <th>DOB</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Age</td>
                    <td>@item.DOB</td>
                </tr>
            }
        </tbody>
    </table>
</div>