@model Category

<form asp-action="Edit" method="post">
    @* Name Input *@
    <div class="mb-3">
        <label for="Name" class="form-label">
            Name:
        </label>
        <input type="text" class="form-control" placeholder="Enter Name" asp-for="Name">
    </div>

    @* Status Input *@
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="check-1" asp-for="Status">
        <label for="check-1" class="form-check-label">
            Active
        </label>
    </div>

    @* Submit Button *@
    <button type="submit" class="btn btn-primary">
        Submit
    </button>
</form>