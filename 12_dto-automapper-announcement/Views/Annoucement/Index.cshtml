@model IEnumerable<Announcement>

<div class="container mt-3">
    @* Header Page *@
    <h2>Announcement List</h2>
    <a asp-action="Create">
        Create a new announcement
    </a>

    @* Table *@
    <table class="table mt-4">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Content</th>
                <th>Category</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>#@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Content</td>
                    <td>@item.Category</td>
                    <td>@item.CreatedAt</td>
                </tr>
            }
        </tbody>
    </table>
</div>