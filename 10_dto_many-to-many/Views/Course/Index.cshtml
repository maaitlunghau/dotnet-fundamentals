@model IEnumerable<Course>

<div class="container mt-3">
    @* Header Page *@
    <h2>Danh sách khoá học</h2>
    <a asp-action="Create">
        Thêm mới khoá học
    </a>

    @* Table *@
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên khoá học</th>
                <th>Giá tiền</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>#@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Price</td>
                    <td>
                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">
                            Edit
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>