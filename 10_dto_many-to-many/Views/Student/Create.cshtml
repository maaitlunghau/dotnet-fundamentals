@model Student

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label for="fullname" class="form-label">
            Tên sinh viên:
        </label>
        <input type="text" class="form-control" placeholder="Nhập tên sinh viên" asp-for="Name">
        <span asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label for="age" class="form-label">
            Tuổi:
        </label>
        <input type="number" class="form-control" placeholder="Nhập tuổi sinh viên" asp-for="Age">
        <span asp-validation-for="Age"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        Submit
    </button>
</form>