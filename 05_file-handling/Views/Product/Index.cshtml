@model IEnumerable<Product>

<div class="container">
    <h1>Product List</h1>
    <a asp-action="Create">
        Create new Product
    </a>

    <div>
        <p>Chọn sản phẩm bất kì để xem thông tin chi tiết</p>
    </div>

    <table class="table table-striped text-center">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên sản phẩm</th>
                <th>Giá thành</th>
                <th>Mô tả</th>
                <th>Hình ảnh</th>
                <th colspan="1">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Description</td>
                    <td>
                        <img src="@item.ImageUrl" class="img-thumbnail" width="150" />
                    </td>
                    <td>
                        <a class="btn btn-info">
                            Detail
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>