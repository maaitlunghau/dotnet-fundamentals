@model IEnumerable<Product>
@{
    string sortBy = ViewBag.sortBy as string ?? "name";
    string sortDir = ViewBag.sortDir as string ?? "asc";
    string nextSortDir(string column)
    {
        if (sortBy == column)
        {
            return sortDir == "asc" ? "desc" : "asc";
        }
        return "asc";
    }
    string sortLabel = sortBy switch
    {
        "name" => sortDir == "asc" ? "Sắp xếp: Tên tăng dần" : "Sắp xếp: Tên giảm dần",
        "price" => sortDir == "asc" ? "Sắp xếp: Giá tăng dần" : "Sắp xếp: Giá giảm dần",
        _ => ""
    };
}

<div class="container">
    <h1>Product Page</h1>

    <div class="mb-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
        <a asp-action="Create" class="btn btn-primary">Create new product</a>

        <div class="d-flex gap-4 justify-content-between align-items-center">
            <!-- Hiển thị trạng thái sắp xếp -->
            @if (!string.IsNullOrEmpty(sortLabel))
            {
                <p><strong>@sortLabel</strong></p>
            }

            <!-- Search form -->
            <form asp-action="Index" method="get" class="d-flex gap-2">
                <input type="text" name="search" class="form-control" placeholder="Search product name..."
                    value="@Context.Request.Query["search"]" />
                <input type="hidden" name="sortBy" value="@sortBy" />
                <input type="hidden" name="sortDir" value="@sortDir" />
                <button type="submit" class="btn btn-outline-success">Search</button>
            </form>
        </div>
    </div>

    <div class="scroll-table-container" style="max-height: 70vh; overflow-y: auto;">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>
                        <a asp-action="Index" asp-route-sortBy="name" asp-route-sortDir="@nextSortDir("name")"
                            asp-route-search="@Context.Request.Query["search"]">
                            Name
                            @if (sortBy == "name")
                            {
                                <span>@(sortDir == "asc" ? "▲" : "▼")</span>
                            }
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortBy="price" asp-route-sortDir="@nextSortDir("price")"
                            asp-route-search="@Context.Request.Query["search"]">
                            Price
                            @if (sortBy == "price")
                            {
                                <span>@(sortDir == "asc" ? "▲" : "▼")</span>
                            }
                        </a>
                    </th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.ProductName</td>
                        <td>$@item.Price</td>
                        <td>
                            <img src="@item.Image" width="150" alt="hình-sản-phẩm" />
                        </td>
                        <td class="d-flex gap-1">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit</a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline-block;"
                                onsubmit="return confirm('Bạn có chắc muốn xoá sản phẩm này không?')">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Scroll bảng và header cố định */
    .scroll-table-container {
        display: block;
    }

    .scroll-table-container thead tr {
        position: sticky;
        top: 0;
        background-color: #fff;
        z-index: 10;
    }

    .scroll-table-container th,
    .scroll-table-container td {
        text-align: center;
        vertical-align: middle;
        white-space: nowrap;
    }
</style>