@model IEnumerable<Book>

<div class="container mt-4">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }


    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">📚 Thư viện sách</h2>
    </div>

    <table class="table table-bordered table-hover align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tiêu đề</th>
                <th>Tác giả</th>
                <th>ISBN</th>
                <th>Tình trạng</th>
                <th style="width: 120px;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td class="text-start">@item.Title</td>
                    <td>@item.Author</td>
                    <td>@item.ISBN</td>
                    <td>
                        <span class="badge @(item.Availability == "Available" ? "bg-success" : "bg-danger")">
                            @item.Availability
                        </span>
                    </td>
                    <td>
                        <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                            Xoá
                        </button>

                        <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content p-4">

                                    <h5 class="text-center text-warning fw-bold mb-3">
                                        Bạn có chắc chắn muốn xoá?
                                    </h5>

                                    <form asp-action="Delete" method="post">
                                        <input type="hidden" name="id" value="@item.Id" />

                                        <div class="mb-2 text-left! text-muted small">
                                            Để xác nhận, hãy nhập <strong>"@item.ISBN"</strong> vào ô bên dưới
                                        </div>

                                        <input type="text" name="isbn" class="form-control mb-3" data-isbn="@item.ISBN"
                                            oninput="checkIsbnMatch(@item.Id)" required />

                                        <button type="submit" id="deleteBtn-@item.Id" class="btn btn-danger w-100" disabled>
                                            Xoá
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function checkIsbnMatch(id) {
        const input = document.querySelector(`#deleteModal-${id} input[name="isbn"]`);
        const deleteBtn = document.getElementById(`deleteBtn-${id}`);

        const correctIsbn = input.dataset.isbn.trim();
        const enteredIsbn = input.value.trim();

        deleteBtn.disabled = enteredIsbn !== correctIsbn;
    }
</script>