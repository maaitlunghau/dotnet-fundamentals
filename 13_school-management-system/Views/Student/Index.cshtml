@model IEnumerable<Student>

<div class="container mt-4">

    <div class="card shadow-sm">
        <div class="card-header p-4 d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                Danh sách sinh viên
            </h4>
            <a asp-action="Create" class="btn btn-success">
                + Thêm mới sinh viên
            </a>
        </div>

        <div class="card-body p-0">
            <table class="table table-striped table-hover text-center mb-0 align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th style="width: 5%">ID</th>
                        <th>Họ tên</th>
                        <th style="width: 15%">Ngày sinh</th>
                        <th>Địa chỉ</th>
                        <th>Giáo viên phụ trách</th>
                        <th style="width: 15%">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                Không có sinh viên nào
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center fw-bold">
                                    #@item.StudentId
                                </td>
                                <td>@item.StudentName</td>
                                <td class="text-center">
                                    @item.DateOfBirth?.ToString("dd/MM/yyyy")
                                </td>
                                <td>@item.Address</td>
                                <td>
                                    <span class="badge bg-secondary">
                                        @(item.Teacher?.TeacherName ?? "Chưa phân công")
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-outline-primary"
                                       asp-action="Edit"
                                       asp-route-id="@item.StudentId">
                                        ✏ Edit
                                    </a>

                                    <form asp-action="Delete"
                                          asp-route-id="@item.StudentId"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('Bạn có chắc chắn muốn xoá sinh viên này?');">
                                        <button type="submit"
                                                class="btn btn-sm btn-outline-danger">
                                            🗑 Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
