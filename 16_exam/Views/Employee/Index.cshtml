@model IEnumerable<Employee>

<div class="container">
    <h1>Danh sách nhân viên</h1>
    <a asp-action="Create">
        Create new
    </a>

    <div class="scroll-table-container" style="max-height: 70vh; overflow-y: auto;">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#Id</th>
                    <th>LastName</th>
                    <th>FirstName</th>
                    <th>BirthDate</th>
                    <th>Skills</th>
                    <th>Photo</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.LastName</td>
                            <td>@item.FirstName</td>
                            <td>@item.BirthDate</td>
                            <td>@item.Skills</td>
                            <td>
                                <img src="@item.Photo" width="150" alt="hình-sản-phẩm" />
                            </td>
                            <td>
                                <a asp-action="UpdateOrDelete" asp-route-id="@item.Id">
                                    Update Or Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="py-4" style="text-align: left !important;">
                            <p class="mb-0">
                                Hiện đang không có bất kì nhân viên nào.
                            </p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Scroll bảng và header cố định */
    .scroll-table-container {
        display: block;
    }

    .scroll-table-container thead tr {
        position: sticky;
        top: 0;
        background-color: #fff;
        z-index: 10;
    }

    .scroll-table-container th,
    .scroll-table-container td {
        text-align: center;
        vertical-align: middle;
        white-space: nowrap;
    }
</style>