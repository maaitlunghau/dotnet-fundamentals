<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Management</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_14_library_management_system.styles.css" asp-append-version="true" />
</head>

@using Newtonsoft.Json

@{
    var userJson = Context.Session.GetString("userInfo");
    User? user = null;

    if (!string.IsNullOrEmpty(userJson))
    {
        user = JsonConvert.DeserializeObject<User>(userJson);
    }
}

<body class="bg-light d-flex flex-column min-vh-100">

    <!-- 🔝 NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                📚 Library System
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav ms-auto align-items-center gap-2">
                    @if (user != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (user?.Role == "admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Book" asp-action="Index">
                                    Quản lý sách
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Index">
                                    Thư viện sách
                                </a>
                            </li>
                        }

                        <li class="nav-item text-white fw-semibold">
                            👋 Xin chào, <span class="text-warning">@user?.Username</span>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm" asp-controller="Auth" asp-action="Logout">
                                Đăng xuất
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-light btn-sm" asp-controller="Auth" asp-action="Login">
                                Đăng nhập
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- 📄 MAIN CONTENT -->
    <main class="container my-4 flex-grow-1">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                @RenderBody()
            </div>
        </div>
    </main>

    <!-- 🔚 FOOTER -->
    <footer class="bg-white border-top text-center py-3 mt-auto">
        <small class="text-muted">
            © 2026 - Library Management System
        </small>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>