@using OA.Domain.Model

@{
    @model IEnumerable<Employee>
    ViewData["title"] = "Trang chủ";
}

@if (!string.IsNullOrEmpty(@TempData["message"] as string))
{
    <div class="alert alert-info">
        <strong>Info!</strong>
        @TempData["message"]
    </div>
}

<div class="container mt-3">
    @* Header Page *@
    <h2>
        Danh sách nhân viên
    </h2>
    <a asp-action="Create">
        Thêm mới nhân viên
    </a>

    @* Table *@
    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên nhân viên</th>
                <th>Tuổi</th>
                <th>Mức lương ($)</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>#@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Salary</td>
                    <td>
                        <form asp-action="Delete" method="post" style="display: inline-block;">
                            <button class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                Delete
                            </button>
                        </form>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">
                            Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>